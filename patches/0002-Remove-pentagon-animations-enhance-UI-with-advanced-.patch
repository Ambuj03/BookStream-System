+}
+
+@keyframes gradient-shift {
+    0%, 100% {
+        background-position: 0% 50%;
+    }
+    50% {
+        background-position: 100% 50%;
+    }
+}
+
+.feature-card-3d:hover {
+    transform: translateY(-15px) scale(1.04) !important;
+    box-shadow: 
+        0 30px 60px rgba(102, 126, 234, 0.15),
