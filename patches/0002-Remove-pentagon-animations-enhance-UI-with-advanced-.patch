+    -webkit-text-fill-color: transparent;
+    background-clip: text;
+    transform: translateY(-3px);
+}
+
+/* Floating animation for hero image */
+.hero-image {
+    animation: gentle-float 8s ease-in-out infinite;
+}
+
+@keyframes gentle-float {
+    0%, 100% {
+        transform: translateY(0px) rotate(0deg);
+    }
+    25% {
+        transform: translateY(-15px) rotate(1deg);
+    }
+    50% {
+        transform: translateY(-10px) rotate(0deg);
+    }
+    75% {
+        transform: translateY(-5px) rotate(-0.5deg);
+    }
+}
+
+/* Enhanced navbar with better backdrop blur */
+.navbar.scrolled {
+    background: rgba(255, 255, 255, 0.98) !important;
+    backdrop-filter: blur(25px) saturate(180%);
+    border-bottom: 1px solid rgba(102, 126, 234, 0.1);
+    box-shadow: 
+        0 10px 40px rgba(0, 0, 0, 0.1),
+        0 2px 8px rgba(102, 126, 234, 0.05) !important;
+}
+
+/* Interactive navigation links */
+.nav-link {
+    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
+}
+
+.nav-link::after {
+    height: 3px !important;
+    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)) !important;
+    border-radius: 2px;
+    transform: translateX(-50%);
+}
+
+.nav-link:hover {
+    color: var(--primary-color) !important;
+    transform: translateY(-2px);
+}
+
+/* Enhanced footer with animated pattern */
+.footer::before {
+    background-image: 
+        radial-gradient(circle at 30px 30px, rgba(102, 126, 234, 0.05) 2px, transparent 2px),
+        radial-gradient(circle at 80px 80px, rgba(118, 75, 162, 0.05) 1px, transparent 1px);
+    background-size: 120px 120px, 60px 60px;
+    animation: pattern-drift 20s linear infinite;
+}
+
+@keyframes pattern-drift {
+    0% {
+        transform: translateX(0) translateY(0);
+    }
+    100% {
+        transform: translateX(60px) translateY(60px);
+    }
+}
+
+/* Pulse effect for important elements */
+.hero-cta .btn-primary {
+    animation: subtle-pulse 3s ease-in-out infinite;
+}
+
+@keyframes subtle-pulse {
+    0%, 100% {
+        box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
+    }
+    50% {
+        box-shadow: 0 0 0 20px rgba(102, 126, 234, 0);
+    }
+}
+
+/* Enhanced selection styling */
+::selection {
+    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
+    color: white;
+    text-shadow: none;
+}
+
+::-moz-selection {
+    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
+    color: white;
+    text-shadow: none;
+}
+
+/* Performance optimizations */
+.feature-card-3d,
+.btn-primary,
+.btn-outline,
+.hero-image {
+    will-change: transform;
+    backface-visibility: hidden;
+}
+
+/* Smooth scrolling */
+html {
+    scroll-behavior: smooth;
+}
+
+/* Enhanced About section with parallax effect */
+.about {
+    background-attachment: fixed;
+    background-size: cover;
+}
+
+/* Advanced loading states */
+img {
+    transition: opacity 0.3s ease, transform 0.3s ease;
+}
+
+img:not([src]) {
+    opacity: 0;
+    transform: scale(0.95);
+}
+
+img[src] {
+    opacity: 1;
+    transform: scale(1);
+}
+
+/* Enhanced accessibility */
+.btn-primary:focus-visible,
+.btn-outline:focus-visible {
+    outline: 3px solid var(--primary-light);
+    outline-offset: 3px;
+    box-shadow: 0 0 0 1px var(--primary-color);
+}
+
+/* Staggered animation delays for feature cards */
+.feature-card-3d:nth-child(1) { animation-delay: 0.1s; }
+.feature-card-3d:nth-child(2) { animation-delay: 0.2s; }
+.feature-card-3d:nth-child(3) { animation-delay: 0.3s; }
+.feature-card-3d:nth-child(4) { animation-delay: 0.4s; }
+
+/* Advanced hover effects for images */
+.hero-image img {
+    transition: all 0.5s cubic-bezier(0.4, 0.0, 0.2, 1);
+}
+
+.hero-image:hover img {
+    transform: scale(1.05) rotate(1deg);
+    filter: brightness(1.1) contrast(1.1);
+}
+
+/* Optimized transitions for reduced motion */
+@media (prefers-reduced-motion: reduce) {
+    .feature-card-3d,
+    .btn-primary,
+    .btn-outline,
+    .hero-image {
+        animation: none !important;
+        transition: none !important;
+    }
+    
+    .feature-card-3d:hover,
+    .btn-primary:hover,
+    .btn-outline:hover {
+        transform: none !important;
+    }
+    
+    .gradient-shift,
+    .pattern-drift,
+    .gentle-float,
+    .subtle-pulse {
+        animation: none !important;
+    }
 } 
